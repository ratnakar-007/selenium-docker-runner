pipeline{
    agents any
    stages{
        stage("start grid"){
            steps{
                sh "docker-compose up -d hub chrome firefox"
            }
        }
        stage("run tests"){
            steps{
                sh "docker compose up search-module book-flight-module"
            }
        }
        stage("stop grid"){
            steps{
                sh "docker-compose down"
            }
        }
    }
}